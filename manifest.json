{
  "manifest_version": 3,
  "name": "SafeContent",
  "version": "1.1",
  "description": "Lọc nội dung chất lượng cao trên nền tảng video YouTube theo từ khóa. Bảo vệ trẻ em khỏi nội dung xấu độc hại. Hỗ trợ cả video thường và YouTube Shorts.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://m.youtube.com/*",
    "*://youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}